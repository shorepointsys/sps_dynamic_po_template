<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="dpr_product_performance_test_view_form" model="ir.ui.view">
        <field name="name">dpr.product.performance.test.view.form</field>
        <field name="model">product.performance.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Product Testing Standards">
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Testing Standard..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="requirements"/>
                            <field name="product_categ_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dpr_product_category_form" model="ir.ui.view">
        <field name="name">dpr.product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook name="categ_notebook">
                    <page name="category_performance" string="Performance Standards">
                        <!--<field name="performance_test_ids" string="Tests">
                            <tree editable="bottom" string="Tests">
                               <field name="name"/>
                               <field name="requirements"/>
                            </tree>
                        </field>-->
                        <group colspan="2" col="2">
                            <separator string="Inspection Notes" colspan="4"/>
                            <field name="inspection_html" colspan="3" nolabel="1"/>
                        </group>
                        <group colspan="2" col="2">
                            <separator string="Instructions" colspan="4"/>
                            <field name="instruction_html" colspan="3" nolabel="1"/>
                        </group>
                        <group colspan="2" col="2">
                            <separator string="Special Instructions" colspan="4"/>
                            <field name="special_instruction_html" colspan="3" nolabel="1"/>
                        </group>
                        <group colspan="2" col="2">
                            <separator string="Other Details" colspan="4"/>
                            <field name="other_details_html" colspan="3" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- Tree View -->
    <record id="dpr_product_performance_test_view_tree" model="ir.ui.view">
        <field name="name">dpr.product.performance.test.view.tree</field>
        <field name="model">product.performance.test</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_categ_id"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="dpr_product_performance_test_view_action" model="ir.actions.act_window">
        <field name="name">Product Testing Standard</field>
        <field name="res_model">product.performance.test</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Product Testing Standard
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem
        id="menu_product_performance_test"
        name="Product Testing Standard"
        parent="purchase.menu_purchase_config"
        action="dpr_product_performance_test_view_action"
        sequence="26"/>
</odoo>

